[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.gitignore_global
	autocrlf = input
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

[fetch]
	prune = true
	pruneTags = true

[rebase]
	autoStash = true
	autoSquash = true

[merge]
	conflictStyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default

[delta]
	navigate = true
	light = true
	side-by-side = false
	line-numbers = true
	syntax-theme = "base16"
	plus-style = "syntax #d7dfd7"
	minus-style = "syntax #f4ede8"
	line-numbers-left-style = "#797593"
	line-numbers-right-style = "#797593"

[interactive]
	diffFilter = delta --color-only

[add.interactive]
	useBuiltin = false

[help]
	autocorrect = 20

[rerere]
	enabled = true

[column]
	ui = auto

[branch]
	sort = -committerdate

